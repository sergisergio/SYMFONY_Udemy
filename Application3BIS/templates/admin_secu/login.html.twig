{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block monTitre %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center border border-dark bg-dark rounded m-2 p-2 text-white">Se connecter</h1>
        {% if error %}
        <div class="alert alert-danger">
            {{error.messageKey | trans(error.messagedata, 'security')}}
        </div>
        {% endif %}
        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label>Login: </label>
                <input type="text" required name="_username" class="form-control">
            </div>
            <div class="form-group">
                <label>Password: </label>
                <input type="password" required name="_password" class="form-control">
            </div>
            <input type="submit" value="Se connecter" class="btn btn-primary">
        </form>
    </div>
{% endblock %}