{% extends 'base.html.twig' %}

{% block title %}continents{% endblock %}

{% block titre %}Liste des continents{% endblock %}

{% block body %}
    {% for continent in continents %}
    <h2 class="border-bottom border-primary"><a href="{{ path('continent', {'id': continent.id }) }}">{{ continent.libelle }}</a></h2>
    <div class="row">
        {% for animal in continent.animal %}
        <div class="col-6">
            <div class="row align-items-center">
                <div class="col-12 cold-md-6 col-lg-2 text-center">
                    <img src="{{ asset('images/' ~ animal.image)}}" alt="" class="img-fluid">
                </div>
                <div class="col tetx-center">
                    <a href="{{ path('animal', {'id': animal.id }) }}"><h2>{{ animal.nom }}</h2></a>
                    <div>{{ animal.description }}</div>
                    <div><a href="{{ path('famille', {id:animal.famille.id}) }}" class"btn btn-primary">{{ animal.famille.libelle }}</a></div>
                </div>
            </div>
        </div>    
        {% endfor %}
    </div>
    {% endfor %}
{% endblock %}
