{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block titre %}Voici la liste des animaux{% endblock %}

{% block body %}
{% if animaux is defined %}
    {% for animal in animaux %}
        <div class="row align-items-center">
            <div class="col-2 text-center">
                <img src="{{ asset('images/' ~ animal.image)}}" alt="">
            </div>
            <div class="col-auto">
                <a href="{{ path('animal', {'id': animal.id }) }}"><h2>{{ animal.nom }}</h2></a>
                <div>{{ animal.description }}</div>
                <div><a href="{{ path('famille', {'id': animal.famille.id }) }}" class="btn btn-primary">{{ animal.famille.libelle }}</a></div>
                <div>
                    {% for continent in animal.continents %}
                        <a href="{{ path('continent', {'id': continent.id }) }}" class="btn btn-warning">{{ continent.libelle }}</a>
                    {% endfor %}
                </div>
                <div>
                    {% for dispose in animal.disposes %}
                        <a class="btn btn-info" href="{{ path('personne', {'id': dispose.personne.id }) }}">{{ dispose.personne.nom }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}    
{% endblock %}
